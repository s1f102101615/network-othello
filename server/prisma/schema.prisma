datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  createdAt DateTime
}

model Room {
  userOnRoom UserOnRoom[]
  name       String
  black      String
  white      String
  watcher    String
  turn       Int
  roomId     String       @id
  board      Json
  status     String
  createdAt  DateTime
}

model UserOnRoom {
  firebaseId String
  Room       Room      @relation(fields: [roomId], references: [roomId])
  in         DateTime
  out        DateTime?
  roomId     String

  @@id([firebaseId, roomId])
}
